{% block body %}
    <div id="carouselHekaLight" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src=" {{ asset('images/B.jpg') }}" height="300" alt="heka light, heka-light">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src=" {{ asset('images/A.jpg') }} " height="300" alt="heka light, heka-light">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src=" {{ asset('images/C.jpg') }} " height="300" alt="heka light, heka-light">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src=" {{ asset('images/D.jpg') }} " height="300" alt="heka light, heka-light">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src=" {{ asset('images/E.jpg') }} " height="300" alt="heka light, heka-light">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src=" {{ asset('images/F.jpg') }} " height="300" alt="heka light, heka-light">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src=" {{ asset('images/G.jpg') }} " height="300" alt="heka light, heka-light">
            </div>
            <a class="carousel-control-prev" href="#carouselHekaLight" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselHekaLight" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-12 col-md-5 row no-gutters">
                <div class="col-12 row justify-content-center">
                    <div class="col-4">
                        <img class="img-thumbnail mx-auto" src="{{asset('images/carole.jpg') }}">
                    </div>
                </div>
                <div class="col-12 row">
                    <div class="col-2 mt-5">
                        <img class="img-fluid" src="{{asset('images/mandala.jpg') }}">
                    </div>
                    <div class="col-8 text-center m-0">
                        <h1 class="m-0"> <b>H</b>eka-Light </h1>
                    </div>
                    <div class="col-2 mt-5">
                        <img class="img-fluid" src="{{asset('images/mandala.jpg') }}">
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-7 no-gutters text-center">
            {% for product in products %}
                {% if app.request.locale =="fr" and product.getLocale == "fr" and product.getTitle == "homepage" %}
                    {{ product.getDescription | raw }}
                {% endif %}
                {% if app.request.locale =="en" and product.getLocale == "en" and product.getTitle == "homepage" %}
                    {{ product.getDescription | raw }}
                {% endif %}
                {% if app.request.locale =="pt" and product.getLocale == "pt" and product.getTitle == "homepage" %}
                    {{ product.getDescription | raw }}
                {% endif %}
            {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}