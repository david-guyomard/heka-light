{% extends 'base.html.twig' %}
{% block body %}
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                {% include '@FullCalendar/Calendar/calendar.html.twig' %}
            </div>
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                <button class="btn" id="booking">Prendre un rendez-vous</button>
            {% else %}
                <a href="{{ path('sonata_user_admin_security_login') }}">Se connecter/cr√©er un compte pour prendre un rendez-vous</a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
            <div class="col" style="display : none" id="bookingForm">
                {{ form_start(form) }}
                    {#{{ form_widget(form) }}#}
                    
                    {{ form_label(form.beginAt) }}
                    {{ form_widget(form.beginAt) }}
                    {{ form_label(form.endAt) }}
                    {{ form_widget(form.endAt) }}
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_label(form.userId) }}
                    {{ form_widget(form.userId) }}
                    <input class="btn btn-success mt-3" type="submit" value="Valider le rendez-vous" />
                {{ form_end(form) }}
            </div>
            {% endif %}
            
        </div>
    </div>
    
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.min.css">
{% endblock %}

